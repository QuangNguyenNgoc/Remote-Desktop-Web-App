@* Power Management Tab Component *@
<div class="power-container">
    <h3 class="power-title">Power Management Actions</h3>
    
    <div class="power-actions-grid">
        <!-- Restart Device Card -->
        <button class="power-card restart-card">
            <div class="power-icon-wrapper restart-icon">
                <svg class="power-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
            </div>
            <span class="power-card-title">Restart Device</span>
            <span class="power-card-description">Reboot the remote system immediately.</span>
        </button>

        <!-- Shutdown Card -->
        <button class="power-card shutdown-card">
            <div class="power-icon-wrapper shutdown-icon">
                <svg class="power-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
            </div>
            <span class="power-card-title">Shutdown</span>
            <span class="power-card-description">Power off the remote system immediately.</span>
        </button>
    </div>
</div>

<style>
    .power-container {
        padding: 2.5rem;
        background-color: var(--card-bg);
        border-radius: 0 0 0.75rem 0.75rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 400px;
    }
    
    .power-title {
        color: var(--text-secondary);
        margin-bottom: 2rem;
        font-size: 1.125rem;
        font-weight: 500;
    }
    
    .power-actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        width: 100%;
        max-width: 48rem;
    }
    
    .power-card {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background-color: var(--card-bg);
        border: 2px solid var(--card-border);
        border-radius: 1rem;
        transition: all 0.3s ease;
        cursor: pointer;
        text-align: center;
    }
    
    .power-card:hover {
        transform: translateY(-2px);
        border-color: var(--card-hover-border);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
    }
    
    .restart-card:hover {
        border-color: #f97316;
        background-color: rgba(249, 115, 22, 0.05);
    }
    
    .shutdown-card:hover {
        border-color: #ef4444;
        background-color: rgba(239, 68, 68, 0.05);
    }
    
    .power-icon-wrapper {
        padding: 1rem;
        border-radius: 50%;
        margin-bottom: 1rem;
        transition: transform 0.3s ease;
    }
    
    .power-card:hover .power-icon-wrapper {
        transform: scale(1.1);
    }
    
    .restart-icon {
        background-color: rgba(249, 115, 22, 0.2);
    }
    
    .shutdown-icon {
        background-color: rgba(239, 68, 68, 0.2);
    }
    
    .power-icon {
        width: 2.5rem;
        height: 2.5rem;
    }
    
    .restart-card .power-icon {
        color: #f97316;
    }
    
    .shutdown-card .power-icon {
        color: #ef4444;
    }
    
    .power-card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        transition: color 0.3s ease;
    }
    
    .restart-card:hover .power-card-title {
        color: #f97316;
    }
    
    .shutdown-card:hover .power-card-title {
        color: #ef4444;
    }
    
    .power-card-description {
        font-size: 0.875rem;
        color: var(--text-tertiary);
        line-height: 1.5;
    }
    
    @@media (max-width: 768px) {
        .power-actions-grid {
            grid-template-columns: 1fr;
        }
    }
</style>