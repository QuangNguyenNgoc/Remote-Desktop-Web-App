@* Power Management Tab Component *@
<div class="power-container">
    <h3 class="power-title">Power Management Actions</h3>

    <!-- Warning Message -->
    <div class="warning-banner">
        <svg class="warning-icon" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd"
                d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                clip-rule="evenodd" />
        </svg>
        <span>WARNING: These actions will affect the host machine immediately!</span>
    </div>

    <div class="power-actions-grid">
        <!-- Lock Workstation Card -->
        <button class="power-card lock-card" @onclick="() => ShowConfirmation(PowerAction.Lock)">
            <div class="power-icon-wrapper lock-icon">
                <svg class="power-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                    </path>
                </svg>
            </div>
            <span class="power-card-title">Lock Workstation</span>
            <span class="power-card-description">Lock the remote workstation screen.</span>
        </button>

        <!-- Sleep / Suspend Card -->
        <button class="power-card sleep-card" @onclick="() => ShowConfirmation(PowerAction.Sleep)">
            <div class="power-icon-wrapper sleep-icon">
                <svg class="power-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z">
                    </path>
                </svg>
            </div>
            <span class="power-card-title">Sleep / Suspend</span>
            <span class="power-card-description">Put the remote system to sleep mode.</span>
        </button>

        <!-- Restart Device Card -->
        <button class="power-card restart-card" @onclick="() => ShowConfirmation(PowerAction.Restart)">
            <div class="power-icon-wrapper restart-icon">
                <svg class="power-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                    </path>
                </svg>
            </div>
            <span class="power-card-title">Restart Computer</span>
            <span class="power-card-description">Reboot the remote system immediately.</span>
        </button>

        <!-- Shutdown Card -->
        <button class="power-card shutdown-card" @onclick="() => ShowConfirmation(PowerAction.Shutdown)">
            <div class="power-icon-wrapper shutdown-icon">
                <svg class="power-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M18.364 5.636a9 9 0 11-12.728 0M12 3v9"></path>
                </svg>
            </div>
            <span class="power-card-title">Shutdown Computer</span>
            <span class="power-card-description">Power off the remote system immediately.</span>
        </button>
    </div>

    <!-- Confirmation Dialog Overlay -->
    @if (ShowDialog)
    {
        <div class="dialog-overlay" @onclick="CancelAction">
            <div class="dialog-box" @onclick:stopPropagation="true">
                <div class="dialog-icon @GetDialogIconClass()">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
                        </path>
                    </svg>
                </div>
                <h4 class="dialog-title">Confirm Action</h4>
                <p class="dialog-message">You will <strong>@GetActionName()</strong> the remote computer.</p>
                <p class="dialog-question">Are you sure you want to continue?</p>
                <div class="dialog-actions">
                    <button class="dialog-btn dialog-cancel" @onclick="CancelAction">Cancel</button>
                    <button class="dialog-btn dialog-confirm @GetConfirmButtonClass()" @onclick="ConfirmAction">
                        Yes, @GetActionName()
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@using RemoteControl.Shared.Models
@using RemoteControl.Shared.Constants
@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager Nav
@implements IAsyncDisposable

@code {
    // CascadingParameter from DeviceControl
    [CascadingParameter(Name = "AgentId")]
    public string AgentId { get; set; } = string.Empty;

    // SignalR
    private HubConnection? _hubConnection;
    private bool IsConnected => _hubConnection?.State == HubConnectionState.Connected;

    // UI State
    private bool ShowDialog { get; set; } = false;
    private PowerAction PendingAction { get; set; }

    private enum PowerAction { Lock, Sleep, Restart, Shutdown }

    protected override async Task OnInitializedAsync()
    {
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(Nav.ToAbsoluteUri("/remotehub"))
            .WithAutomaticReconnect()
            .Build();

        try
        {
            await _hubConnection.StartAsync();
            Console.WriteLine("[Power] SignalR connected");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Power] SignalR error: {ex.Message}");
        }
    }

    private void ShowConfirmation(PowerAction action)
    {
        PendingAction = action;
        ShowDialog = true;
    }

    private void CancelAction()
    {
        ShowDialog = false;
    }

    private async Task ConfirmAction()
    {
        ShowDialog = false;
        
        if (_hubConnection == null || !IsConnected) return;
        if (string.IsNullOrEmpty(AgentId)) return;

        var commandType = GetCommandType(PendingAction);
        var request = new CommandRequest { AgentId = AgentId, Type = commandType };
        await _hubConnection.InvokeAsync("SendCommand", request);
        Console.WriteLine($"[Power] Sent: {PendingAction} to {AgentId}");
    }

    private CommandType GetCommandType(PowerAction action) => action switch
    {
        PowerAction.Lock => CommandType.Lock,
        PowerAction.Sleep => CommandType.Sleep,
        PowerAction.Restart => CommandType.Restart,
        PowerAction.Shutdown => CommandType.Shutdown,
        _ => throw new ArgumentException($"Unknown action: {action}")
    };

    private string GetActionName() => PendingAction switch
    {
        PowerAction.Lock => "LOCK",
        PowerAction.Sleep => "SLEEP",
        PowerAction.Restart => "RESTART",
        PowerAction.Shutdown => "SHUTDOWN",
        _ => "UNKNOWN"
    };

    private string GetDialogIconClass() => PendingAction switch
    {
        PowerAction.Lock => "icon-orange",
        PowerAction.Sleep => "icon-purple",
        PowerAction.Restart => "icon-blue",
        PowerAction.Shutdown => "icon-red",
        _ => ""
    };

    private string GetConfirmButtonClass() => PendingAction switch
    {
        PowerAction.Lock => "confirm-orange",
        PowerAction.Sleep => "confirm-purple",
        PowerAction.Restart => "confirm-blue",
        PowerAction.Shutdown => "confirm-red",
        _ => ""
    };

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection != null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
}

