@using RemoteControl.Shared.Models
@using RemoteControl.Shared.Constants
@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

@code {
    // CascadingParameter from DeviceControl
    [CascadingParameter(Name = "AgentId")]
    public string AgentId { get; set; } = string.Empty;

    // SignalR
    private HubConnection? _hubConnection;
    private bool IsConnected => _hubConnection?.State == HubConnectionState.Connected;

    private bool _hubInitialized = false;

    private bool IsStreaming { get; set; } = false;
    private string? CurrentFrame { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _hubInitialized) return;
        _hubInitialized = true;

        await InitializeSignalR();
    }

    private async Task InitializeSignalR()
    {
        try
        {
            var authed = await JSRuntime.InvokeAsync<bool>("passkeyAuth.me");
            if (!authed)
            {
                Console.WriteLine("[Webcam] Not authenticated - skip SignalR connect");
                return;
            }

            var passkey = await JSRuntime.InvokeAsync<string>("passkeyAuth.getPasskey");

            _hubConnection = new HubConnectionBuilder()
                .WithUrl(Nav.ToAbsoluteUri("/remotehub"), options =>
                {
                    if (!string.IsNullOrWhiteSpace(passkey))
                        options.Headers["X-Passkey"] = passkey;
                })
                .WithAutomaticReconnect()
                .Build();

            // Subscribe to webcam frames
            _hubConnection.On<string, string>("WebcamFrame", OnWebcamFrame);

            await _hubConnection.StartAsync();
            Console.WriteLine("[Webcam] SignalR connected");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Webcam] SignalR error: {ex.Message}");
        }
    }

    private void OnWebcamFrame(string agentId, string base64Jpeg)
    {
        if (agentId != AgentId) return;

        CurrentFrame = $"data:image/jpeg;base64,{base64Jpeg}";
        InvokeAsync(StateHasChanged);
    }

    private async Task StartStream()
    {
        if (_hubConnection == null || !IsConnected) return;
        if (string.IsNullOrEmpty(AgentId)) return;

        IsStreaming = true;
        CurrentFrame = null;
        StateHasChanged();

        var request = new CommandRequest { AgentId = AgentId, Type = CommandType.WebcamOn };
        await _hubConnection.InvokeAsync("SendCommand", request);
        Console.WriteLine("[Webcam] Sent WebcamOn command");
    }

    private async Task StopStream()
    {
        if (_hubConnection == null || !IsConnected) return;

        IsStreaming = false;
        StateHasChanged();

        var request = new CommandRequest { AgentId = AgentId, Type = CommandType.WebcamOff };
        await _hubConnection.InvokeAsync("SendCommand", request);
        Console.WriteLine("[Webcam] Sent WebcamOff command");
    }

    public async ValueTask DisposeAsync()
    {
        // Stop streaming when leaving tab
        if (IsStreaming && _hubConnection != null && IsConnected)
        {
            var request = new CommandRequest { AgentId = AgentId, Type = CommandType.WebcamOff };
            await _hubConnection.InvokeAsync("SendCommand", request);
        }

        if (_hubConnection != null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
}

<div class="webcam-container">
    <div class="webcam-feed-wrapper">
        <div class="webcam-feed">
            @if (!string.IsNullOrEmpty(CurrentFrame))
            {
                <!-- Live Camera Feed -->
                <img src="@CurrentFrame" alt="Webcam stream" class="webcam-image" />
            }
            else
            {
                <!-- Placeholder when no frame -->
                <div class="webcam-placeholder">
                    <svg class="camera-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z">
                        </path>
                    </svg>
                    <span class="placeholder-text">@(IsStreaming ? "Waiting for stream..." : "Press Start to begin")</span>
                </div>
            }

            <!-- Recording Indicator - Only show when streaming -->
            @if (IsStreaming)
            {
                <div class="recording-badge">
                    <span class="rec-dot"></span>
                    <span class="rec-text">REC</span>
                </div>
            }
        </div>
    </div>

    <div class="webcam-controls">
        <button class="webcam-button start-button @(IsStreaming ? "btn-disabled" : "")"
                @onclick="StartStream"
                disabled="@IsStreaming">
            <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z">
                </path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Start Stream
        </button>
        <button class="webcam-button stop-button @(!IsStreaming ? "btn-disabled" : "")"
                @onclick="StopStream"
                disabled="@(!IsStreaming)">
            <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 10a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1v-4z"></path>
            </svg>
            Stop Stream
        </button>
    </div>
</div>

