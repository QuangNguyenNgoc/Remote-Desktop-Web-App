@using RemoteControl.Shared.Models
@using RemoteControl.Shared.Constants
@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager Nav
@implements IAsyncDisposable

@code {
    // CascadingParameter from DeviceControl
    [CascadingParameter(Name = "AgentId")]
    public string AgentId { get; set; } = string.Empty;

    // SignalR
    private HubConnection? _hubConnection;
    private bool IsConnected => _hubConnection?.State == HubConnectionState.Connected;
    private System.Timers.Timer? _refreshTimer;

    // System metrics - from SystemInfo
    private double CpuUsage { get; set; } = 0;
    private double RamUsage { get; set; } = 0;
    private string Uptime { get; set; } = "--";

    // Top processes
    private List<ProcessInfo> AllProcesses { get; set; } = new();
    private IEnumerable<ProcessInfo> TopProcesses => 
        AllProcesses.OrderByDescending(p => p.CpuUsage).Take(5);

    protected override async Task OnInitializedAsync()
    {
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(Nav.ToAbsoluteUri("/remotehub"))
            .WithAutomaticReconnect()
            .Build();

        _hubConnection.On<CommandResult>(HubEvents.CommandCompleted, OnCommandCompleted);

        try
        {
            await _hubConnection.StartAsync();
            Console.WriteLine("[SystemMonitor] SignalR connected");

            // Auto-refresh every 10 seconds
            _refreshTimer = new System.Timers.Timer(10000);
            _refreshTimer.Elapsed += async (s, e) => await RequestSystemInfo();
            _refreshTimer.Start();

            // Initial request
            await RequestSystemInfo();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[SystemMonitor] SignalR error: {ex.Message}");
        }
    }

    private async Task RequestSystemInfo()
    {
        if (_hubConnection == null || !IsConnected) return;
        if (string.IsNullOrEmpty(AgentId)) return;

        var request = new CommandRequest { AgentId = AgentId, Type = CommandType.GetSystemInfo };
        await _hubConnection.InvokeAsync("SendCommand", request);
    }

    private void OnCommandCompleted(CommandResult result)
    {
        if (result.AgentId != AgentId) return;
        if (!result.Success) return;

        if (result.Data is System.Text.Json.JsonElement jsonElement)
        {
            try
            {
                var systemInfo = System.Text.Json.JsonSerializer.Deserialize<SystemInfo>(
                    jsonElement.GetRawText(),
                    new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });
                
                if (systemInfo != null)
                {
                    CpuUsage = Math.Round(systemInfo.CpuUsage, 1);
                    RamUsage = Math.Round(systemInfo.MemoryUsage, 1);
                    // Calculate uptime from Environment.TickCount if available
                    InvokeAsync(StateHasChanged);
                }
            }
            catch { }
        }
    }

    public async ValueTask DisposeAsync()
    {
        _refreshTimer?.Stop();
        _refreshTimer?.Dispose();
        if (_hubConnection != null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
}
<div class="system-monitor-container">
    @* Metrics Cards *@
    <div class="metrics-grid">
        @* CPU Card *@
        <div class="metric-card cpu-card">
            <div class="metric-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="4" y="4" width="16" height="16" rx="2" />
                    <rect x="9" y="9" width="6" height="6" />
                    <line x1="9" y1="1" x2="9" y2="4" />
                    <line x1="15" y1="1" x2="15" y2="4" />
                    <line x1="9" y1="20" x2="9" y2="23" />
                    <line x1="15" y1="20" x2="15" y2="23" />
                    <line x1="20" y1="9" x2="23" y2="9" />
                    <line x1="20" y1="14" x2="23" y2="14" />
                    <line x1="1" y1="9" x2="4" y2="9" />
                    <line x1="1" y1="14" x2="4" y2="14" />
                </svg>
            </div>
            <div class="metric-info">
                <span class="metric-label">CPU Usage</span>
                <span class="metric-value">@CpuUsage%</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill cpu-fill" style="width: @CpuUsage%"></div>
            </div>
        </div>

        @* RAM Card *@
        <div class="metric-card ram-card">
            <div class="metric-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M2 6h20v12H2z" />
                    <line x1="6" y1="10" x2="6" y2="14" />
                    <line x1="10" y1="10" x2="10" y2="14" />
                    <line x1="14" y1="10" x2="14" y2="14" />
                    <line x1="18" y1="10" x2="18" y2="14" />
                </svg>
            </div>
            <div class="metric-info">
                <span class="metric-label">RAM Usage</span>
                <span class="metric-value">@RamUsage%</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill ram-fill" style="width: @RamUsage%"></div>
            </div>
        </div>

        @* Uptime Card *@
        <div class="metric-card uptime-card">
            <div class="metric-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10" />
                    <polyline points="12 6 12 12 16 14" />
                </svg>
            </div>
            <div class="metric-info">
                <span class="metric-label">System Uptime</span>
                <span class="metric-value uptime-value">@Uptime</span>
            </div>
            <div class="uptime-badge">
                <span>Connected</span>
            </div>
        </div>
    </div>

    @* Processes List *@
    <div class="processes-section">
        <h3 class="section-title">Top Processes</h3>
        <div class="processes-list">
            @foreach (var (process, index) in TopProcesses.Select((p, i) => (p, i)))
            {
                <div class="process-item">
                    <div class="process-rank">
                        @if (index < 3)
                        {
                            <span class="rank-badge rank-@(index + 1)">@(index + 1)</span>
                        }
                        else
                        {
                            <span class="rank-number">@(index + 1)</span>
                        }
                    </div>
                    <div class="process-name">@process.ProcessName</div>
                    <div class="process-stats">
                        <span class="stat-item">
                            <span class="stat-label">CPU:</span>
                            <span class="stat-value">@process.CpuUsage.ToString("F1")%</span>
                        </span>
                        <span class="stat-item">
                            <span class="stat-label">Memory:</span>
                            <span class="stat-value">@process.MemoryUsageMB MB</span>
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



<style>
    .system-monitor-container {
        padding: 24px;
        min-height: 500px;
        background-color: var(--card-bg);
        border-radius: 0 0 0.75rem 0.75rem;
