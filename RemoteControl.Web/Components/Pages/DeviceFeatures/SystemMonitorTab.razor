@* System Monitor Tab Component *@
<div class="system-monitor-container">
    @* Metrics Cards *@
    <div class="metrics-grid">
        @* CPU Card *@
        <div class="metric-card cpu-card">
            <div class="metric-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="4" y="4" width="16" height="16" rx="2" />
                    <rect x="9" y="9" width="6" height="6" />
                    <line x1="9" y1="1" x2="9" y2="4" />
                    <line x1="15" y1="1" x2="15" y2="4" />
                    <line x1="9" y1="20" x2="9" y2="23" />
                    <line x1="15" y1="20" x2="15" y2="23" />
                    <line x1="20" y1="9" x2="23" y2="9" />
                    <line x1="20" y1="14" x2="23" y2="14" />
                    <line x1="1" y1="9" x2="4" y2="9" />
                    <line x1="1" y1="14" x2="4" y2="14" />
                </svg>
            </div>
            <div class="metric-info">
                <span class="metric-label">CPU Usage</span>
                <span class="metric-value">@CpuUsage%</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill cpu-fill" style="width: @CpuUsage%"></div>
            </div>
        </div>

        @* RAM Card *@
        <div class="metric-card ram-card">
            <div class="metric-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M2 6h20v12H2z" />
                    <line x1="6" y1="10" x2="6" y2="14" />
                    <line x1="10" y1="10" x2="10" y2="14" />
                    <line x1="14" y1="10" x2="14" y2="14" />
                    <line x1="18" y1="10" x2="18" y2="14" />
                </svg>
            </div>
            <div class="metric-info">
                <span class="metric-label">RAM Usage</span>
                <span class="metric-value">@RamUsage%</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill ram-fill" style="width: @RamUsage%"></div>
            </div>
        </div>

        @* Uptime Card *@
        <div class="metric-card uptime-card">
            <div class="metric-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10" />
                    <polyline points="12 6 12 12 16 14" />
                </svg>
            </div>
            <div class="metric-info">
                <span class="metric-label">System Uptime</span>
                <span class="metric-value uptime-value">@Uptime</span>
            </div>
            <div class="uptime-badge">
                <span>Connected</span>
            </div>
        </div>
    </div>

    @* Processes List *@
    <div class="processes-section">
        <h3 class="section-title">Top Processes</h3>
        <div class="processes-list">
            @foreach (var (process, index) in Processes.Select((p, i) => (p, i)))
            {
                <div class="process-item">
                    <div class="process-rank">
                        @if (index < 3)
                        {
                            <span class="rank-badge rank-@(index + 1)">@(index + 1)</span>
                        }
                        else
                        {
                            <span class="rank-number">@(index + 1)</span>
                        }
                    </div>
                    <div class="process-name">@process.Name</div>
                    <div class="process-stats">
                        <span class="stat-item">
                            <span class="stat-label">CPU:</span>
                            <span class="stat-value">@process.CpuUsage%</span>
                        </span>
                        <span class="stat-item">
                            <span class="stat-label">Memory:</span>
                            <span class="stat-value">@process.Memory</span>
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .system-monitor-container {
        padding: 24px;
        min-height: 500px;
        background-color: var(--card-bg);
        border-radius: 0 0 0.75rem 0.75rem;
    }

    .metrics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 32px;
    }

    .metric-card {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        border-radius: 12px;
        padding: 24px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .metric-card:hover {
        border-color: var(--card-hover-border);
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .cpu-card {
        background: linear-gradient(135deg, var(--card-bg) 0%, rgba(59, 130, 246, 0.05) 100%);
    }

    .ram-card {
        background: linear-gradient(135deg, var(--card-bg) 0%, rgba(16, 185, 129, 0.05) 100%);
    }

    .uptime-card {
        background: linear-gradient(135deg, var(--card-bg) 0%, rgba(139, 92, 246, 0.05) 100%);
    }

    .metric-icon {
        color: var(--text-tertiary);
        margin-bottom: 12px;
    }

    .metric-info {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 16px;
    }

    .metric-label {
        font-size: 14px;
        color: var(--text-tertiary);
        font-weight: 500;
    }

    .metric-value {
        font-size: 32px;
        font-weight: 700;
        color: var(--text-primary);
    }

    .uptime-value {
        font-size: 24px;
    }

    .progress-bar {
        height: 8px;
        background: var(--card-border);
        border-radius: 999px;
        overflow: hidden;
        position: relative;
    }

    .progress-fill {
        height: 100%;
        border-radius: 999px;
        transition: width 0.6s ease;
        position: relative;
    }

    .cpu-fill {
        background: linear-gradient(90deg, #3b82f6 0%, #60a5fa 100%);
    }

    .ram-fill {
        background: linear-gradient(90deg, #10b981 0%, #34d399 100%);
    }

    .uptime-badge {
        margin-top: 16px;
        display: inline-block;
    }

    .uptime-badge span {
        padding: 6px 12px;
        background: rgba(139, 92, 246, 0.1);
        color: #8b5cf6;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
    }

    .processes-section {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        border-radius: 12px;
        padding: 24px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 20px;
    }

    .processes-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .process-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px;
        background: var(--table-row-hover);
        border: 1px solid var(--card-border);
        border-radius: 8px;
        transition: all 0.2s ease;
    }

    .process-item:hover {
        background: var(--card-bg);
        border-color: var(--card-hover-border);
    }

    .process-rank {
        flex-shrink: 0;
        width: 32px;
        text-align: center;
    }

    .rank-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        font-weight: 700;
        font-size: 12px;
    }

    .rank-1 {
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        color: white;
        box-shadow: 0 2px 8px rgba(251, 191, 36, 0.3);
    }

    .rank-2 {
        background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
        color: white;
        box-shadow: 0 2px 8px rgba(148, 163, 184, 0.3);
    }

    .rank-3 {
        background: linear-gradient(135deg, #fb923c 0%, #f97316 100%);
        color: white;
        box-shadow: 0 2px 8px rgba(251, 146, 60, 0.3);
    }

    .rank-number {
        color: var(--text-tertiary);
        font-weight: 600;
    }

    .process-name {
        flex: 1;
        font-weight: 500;
        color: var(--text-primary);
        font-size: 14px;
    }

    .process-stats {
        display: flex;
        gap: 24px;
    }

    .stat-item {
        display: flex;
        gap: 6px;
        font-size: 13px;
    }

    .stat-label {
        color: var(--text-tertiary);
    }

    .stat-value {
        color: var(--text-primary);
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .metrics-grid {
            grid-template-columns: 1fr;
        }

        .process-stats {
            flex-direction: column;
            gap: 8px;
        }
    }
</style>

