@page "/login"
@layout EmptyLayout
@using System.Net.Http.Json
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="login-page">
    @* Animated Background *@
    <div class="background-layer">
        <div class="gradient-overlay"></div>
        <div class="floating-orb orb-1"></div>
        <div class="floating-orb orb-2"></div>
        <div class="floating-orb orb-3"></div>
    </div>

    @* Login Card *@
    <div class="login-container">
        <div class="login-card">
            @* Logo Section *@
            <div class="logo-section">
                <div class="logo-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                        <circle cx="12" cy="12" r="3"/>
                    </svg>
                </div>
                <h1 class="logo-title">NETSPY</h1>
                <p class="logo-subtitle">Admin authentication required</p>
            </div>

            @* Login Form *@
            <div class="form-section">
                <div class="form-group">
                    <label for="password-input">Password</label>
                    <div class="input-wrapper">
                        <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect width="18" height="11" x="3" y="11" rx="2" ry="2"/>
                            <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                        </svg>
                        <input 
                            id="password-input" 
                            type="@(_showPassword ? "text" : "password")" 
                            @bind="_passkey" 
                            @bind:event="oninput"
                            @onkeypress="HandleKeyPress"
                            placeholder="Enter admin password"
                            class="password-input @(_hasError ? "input-error shake" : "")"
                            disabled="@(_isLoading || _isLocked)" />
                        <button type="button" class="toggle-btn" @onclick="TogglePassword" disabled="@_isLoading">
                            @if (_showPassword)
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M9.88 9.88a3 3 0 1 0 4.24 4.24"/>
                                    <path d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 10 7 10 7a13.16 13.16 0 0 1-1.67 2.68"/>
                                    <path d="M6.61 6.61A13.526 13.526 0 0 0 2 12s3 7 10 7a9.74 9.74 0 0 0 5.39-1.61"/>
                                    <line x1="2" x2="22" y1="2" y2="22"/>
                                </svg>
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                                    <circle cx="12" cy="12" r="3"/>
                                </svg>
                            }
                        </button>
                    </div>
                    @if (_hasError)
                    {
                        <p class="error-text">@_errorMessage</p>
                    }
                </div>

                @* Remember Me *@
                <label class="remember-checkbox">
                    <input type="checkbox" @bind="_rememberMe" disabled="@(_isLoading || _isLocked)" />
                    <span class="checkmark"></span>
                    <span class="remember-text">Remember me <span class="remember-hint">(1 hour)</span></span>
                </label>

                @* IP Check Status *@
                <div class="ip-check-status">
                    <div class="status-dot @(_ipCheckStatus ? "status-online" : "status-offline")"></div>
                    <span class="status-text">Server: http://localhost:5048</span>
                </div>

                @* Submit Button *@
                <button class="submit-btn" @onclick="LoginAsync" disabled="@(_isLoading || _isLocked || string.IsNullOrWhiteSpace(_passkey))">
                    @if (_isLocked)
                    {
                        <span>ðŸ”’ Locked (@_lockoutSecondsRemaining s)</span>
                    }
                    else if (_isLoading)
                    {
                        <div class="btn-loading">
                            <div class="spinner"></div>
                            <span>Logging in...</span>
                        </div>
                    }
                    else
                    {
                        <span>Login</span>
                    }
                </button>
            </div>
        </div>
    </div>

    @* Footer *@
    <footer class="login-footer">
        <p>Â© 2024 NETSPY Remote Control â€¢ Secure Connection</p>
    </footer>
</div>

@code {
    // State variables
    private string _passkey = "";
    private string _errorMessage = "";
    private bool _hasError = false;
    private bool _isLoading = false;
    private bool _showPassword = false;
    private bool _rememberMe = false;
    private bool _ipCheckStatus = false;
    
    // Rate limit lockout state
    private bool _isLocked = false;
    private int _lockoutSecondsRemaining = 0;
    private System.Timers.Timer? _lockoutTimer;

    private void TogglePassword() => _showPassword = !_showPassword;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        // Check IP status
        await CheckIpStatus();

        // If already logged in, redirect to home
        if (await IsRememberedAndValidAsync())
        {
            Nav.NavigateTo("/", forceLoad: true);
        }
    }

    private async Task CheckIpStatus()
    {
        try
        {
            using var http = new HttpClient { Timeout = TimeSpan.FromSeconds(3) };
            var response = await http.GetAsync("http://localhost:5048/");
            _ipCheckStatus = response.IsSuccessStatusCode;
        }
        catch
        {
            _ipCheckStatus = false;
        }
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoginAsync()
    {
        if (_isLoading || _isLocked) return;

        if (string.IsNullOrWhiteSpace(_passkey))
        {
            ShowError("Please enter password.");
            return;
        }

        _hasError = false;
        _errorMessage = "";
        _isLoading = true;

        try
        {
            using var http = new HttpClient { BaseAddress = new Uri(Nav.BaseUri) };
            var resp = await http.PostAsJsonAsync("/auth/verify", new { Passkey = _passkey });

            if (resp.StatusCode == System.Net.HttpStatusCode.TooManyRequests)
            {
                StartLockout(60);
                ShowError($"Too many attempts. Please wait {_lockoutSecondsRemaining}s.");
                return;
            }
            
            if (!resp.IsSuccessStatusCode)
            {
                ShowError("Login failed. Please try again.");
                return;
            }

            var data = await resp.Content.ReadFromJsonAsync<VerifyResponse>();
            
            if (data?.Success != true)
            {
                ShowError("Wrong password. Please try again.");
                _passkey = "";
                return;
            }

            // Persist login with Remember Me (1 hour)
            await PersistLoginAsync(_rememberMe);
            Nav.NavigateTo("/", forceLoad: true);
        }
        catch
        {
            ShowError("Connection error. Please try again.");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ShowError(string message)
    {
        _errorMessage = message;
        _hasError = true;
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !_isLoading && !_isLocked)
        {
            _ = LoginAsync();
        }
    }

    private void StartLockout(int seconds)
    {
        _isLocked = true;
        _lockoutSecondsRemaining = seconds;
        
        _lockoutTimer?.Stop();
        _lockoutTimer = new System.Timers.Timer(1000);
        _lockoutTimer.Elapsed += (s, e) =>
        {
            _lockoutSecondsRemaining--;
            _errorMessage = $"Too many attempts. Please wait {_lockoutSecondsRemaining}s.";
            
            if (_lockoutSecondsRemaining <= 0)
            {
                _isLocked = false;
                _hasError = false;
                _errorMessage = "";
                _lockoutTimer?.Stop();
            }
            
            InvokeAsync(StateHasChanged);
        };
        _lockoutTimer.Start();
    }

    // Persist login to storage (1 hour)
    private async Task PersistLoginAsync(bool remember)
    {
        if (remember)
        {
            var until = DateTimeOffset.UtcNow.AddHours(1).ToUnixTimeSeconds().ToString();
            await JS.InvokeVoidAsync("localStorage.setItem", "rc_auth_until", until);
            await JS.InvokeVoidAsync("localStorage.setItem", "rc_auth", "1");
            await JS.InvokeVoidAsync("sessionStorage.removeItem", "rc_auth_session");
        }
        else
        {
            await JS.InvokeVoidAsync("sessionStorage.setItem", "rc_auth_session", "1");
            await JS.InvokeVoidAsync("localStorage.removeItem", "rc_auth_until");
            await JS.InvokeVoidAsync("localStorage.removeItem", "rc_auth");
        }
    }

    private async Task<bool> IsRememberedAndValidAsync()
    {
        var session = await JS.InvokeAsync<string>("sessionStorage.getItem", "rc_auth_session");
        if (session == "1") return true;

        var flag = await JS.InvokeAsync<string>("localStorage.getItem", "rc_auth");
        var untilStr = await JS.InvokeAsync<string>("localStorage.getItem", "rc_auth_until");
        if (flag != "1" || string.IsNullOrWhiteSpace(untilStr)) return false;

        if (!long.TryParse(untilStr, out var until)) return false;
        var now = DateTimeOffset.UtcNow.ToUnixTimeSeconds();
        return now <= until;
    }

    private sealed class VerifyResponse
    {
        public bool Success { get; set; }
    }
}

