@page "/login"
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager Nav
@inject IJSRuntime JS

@* Passkey Login Box - Inside normal layout with Sidebar *@

<div class="passkey-login-box">
    <div class="passkey-header">
        <div class="passkey-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect width="18" height="11" x="3" y="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
        </div>
        <h1>Passkey Login</h1>
    </div>

    <div class="passkey-form">
        <div class="form-group">
            <label for="passkey-input">Enter passkey</label>
            <div class="input-wrapper">
                <input 
                    id="passkey-input" 
                    type="password" 
                    @bind="_passkey" 
                    @onkeypress="HandleKeyPress"
                    placeholder="••••••••"
                    class="passkey-input" />
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m15.5 7.5 2.3 2.3a1 1 0 0 0 1.4 0l2.1-2.1a1 1 0 0 0 0-1.4L19 4"/>
                    <path d="m21 2-9.6 9.6"/>
                    <circle cx="7.5" cy="15.5" r="5.5"/>
                </svg>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(_error))
        {
            <div class="error-message">@_error</div>
        }

        <button 
            class="login-button" 
            @onclick="LoginAsync" 
            disabled="@_isLoading">
            @if (_isLoading)
            {
                <span class="loading-spinner"></span>
                <span>Logging in...</span>
            }
            else
            {
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect width="18" height="11" x="3" y="11" rx="2" ry="2"/>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                </svg>
                <span>Login</span>
            }
        </button>

        <div class="passkey-footer">
            <p>Secure authentication required</p>
        </div>
    </div>
</div>

@code {
    private string _passkey = "";
    private string _error = "";
    private string _returnUrl = "/devices";
    private bool _isLoading = false;

    protected override void OnInitialized()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var q = QueryHelpers.ParseQuery(uri.Query);

        if (q.TryGetValue("returnUrl", out var v))
        {
            var s = v.ToString();
            if (!string.IsNullOrWhiteSpace(s))
                _returnUrl = s;
        }
    }

    private async Task LoginAsync()
    {
        if (string.IsNullOrWhiteSpace(_passkey))
        {
            _error = "Please enter passkey.";
            return;
        }

        _error = "";
        _isLoading = true;
        StateHasChanged();

        var ok = await JS.InvokeAsync<bool>("passkeyAuth.login", _passkey);
        
        _isLoading = false;
        
        if (!ok)
        {
            _error = "Invalid passkey.";
            StateHasChanged();
            return;
        }

        Nav.NavigateTo(_returnUrl, forceLoad: true);
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            _ = LoginAsync();
        }
    }
}

<style>
    .passkey-login-box {
        width: 100%;
        max-width: 24rem;
    }

    .passkey-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .passkey-icon {
        padding: 0.625rem;
        border-radius: 0.625rem;
        background: rgba(59, 130, 246, 0.15);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .passkey-icon svg {
        width: 1.5rem;
        height: 1.5rem;
        color: #3b82f6;
    }

    .passkey-header h1 {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0;
    }

    .passkey-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-group label {
        display: block;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
        color: var(--text-tertiary);
    }

    .input-wrapper {
        position: relative;
    }

    .passkey-input {
        width: 100%;
        padding: 0.75rem 2.5rem 0.75rem 1rem;
        border-radius: 0.5rem;
        font-size: 1rem;
        background: var(--card-bg);
        border: 2px solid var(--card-border);
        color: var(--text-primary);
        transition: all 0.2s;
        outline: none;
        box-sizing: border-box;
    }

    .passkey-input:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.15);
    }

    .passkey-input::placeholder {
        color: var(--text-quaternary);
    }

    .input-icon {
        position: absolute;
        right: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        width: 1.25rem;
        height: 1.25rem;
        color: var(--text-quaternary);
        pointer-events: none;
    }

    .error-message {
        padding: 0.75rem;
        border-radius: 0.5rem;
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #ef4444;
        font-size: 0.875rem;
    }

    .login-button {
        width: 100%;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 500;
        font-size: 0.875rem;
        color: white;
        background: #3b82f6;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .login-button:hover:not(:disabled) {
        background: #2563eb;
    }

    .login-button:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .loading-spinner {
        width: 1rem;
        height: 1rem;
        border: 2px solid white;
        border-top-color: transparent;
        border-radius: 50%;
        animation: spin 0.6s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .passkey-footer {
        text-align: center;
        padding-top: 0.5rem;
    }

    .passkey-footer p {
        font-size: 0.75rem;
        color: var(--text-quaternary);
        margin: 0;
    }
</style>
