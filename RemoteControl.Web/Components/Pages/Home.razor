        </Icon>
        <SubContent>
            <div class="w-24 h-1 mt-3 rounded-full overflow-hidden" style="background-color: var(--progress-bg);">
                <div class="h-full w-[14%]" style="background-color: var(--progress-fill);"></div>
            </div>
        </SubContent>
    </StatCard>
</div>

@* --- Layout --- *@
<div class="grid grid-cols-1 xl:grid-cols-3 gap-6">

    @* Cột Trái *@
    <div class="xl:col-span-2 rounded-xl overflow-hidden flex flex-col h-full"
        style="background-color: var(--card-bg); border: 1px solid var(--card-border);">
        <div class="px-6 py-4 flex justify-between items-center" style="border-bottom: 1px solid var(--card-border);">
            <h3 class="font-semibold text-lg" style="color: var(--text-primary);">Recent Agent Activity</h3>
            <button class="text-sm transition-colors" style="color: var(--btn-primary-bg);"
                onmouseover="this.style.color='var(--btn-primary-hover)';"
                onmouseout="this.style.color='var(--btn-primary-bg)';">
                View All Logs
            </button>
        </div>
        <div class="overflow-x-auto grow">
            <table class="w-full text-left text-sm" style="color: var(--table-text);">
                <thead class="uppercase text-xs font-semibold"
                    style="background-color: var(--table-header-bg); color: var(--table-header-text);">
                    <tr>
                        <th class="px-6 py-3">Agent ID</th>
                        <th class="px-6 py-3">Event Type</th>
                        <th class="px-6 py-3">Details</th>
                        <th class="px-6 py-3">Time</th>
                    </tr>
                </thead>
                <tbody style="border-top: 1px solid var(--table-border);">
                    @foreach (var activity in RecentActivities)
                    {
                        <tr class="transition-colors" style="border-bottom: 1px solid var(--table-border);"
                            onmouseover="this.style.backgroundColor='var(--table-row-hover)';"
                            onmouseout="this.style.backgroundColor='transparent';">
                            <td class="px-6 py-4 font-medium" style="color: var(--table-text-primary);">@activity.AgentId
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-2 py-1 rounded text-xs"
                                    style="background-color: @activity.BadgeBgColor; color: @activity.BadgeTextColor;">
                                    @activity.EventType
                                </span>
                            </td>
                            <td class="px-6 py-4">@activity.Details</td>
                            <td class="px-6 py-4">@activity.TimeAgo</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @* Cột Phải *@
    <div class="xl:col-span-1 h-full">
        @* Gọi Component ResourceUsageCard ở đây *@
        <ResourceUsageCard />
    </div>
</div>

