@* --- Layout --- *@
<div class="grid grid-cols-1 xl:grid-cols-3 gap-6">

    @* Cột Trái *@
    <div class="xl:col-span-2 rounded-xl overflow-hidden flex flex-col h-full"
        style="background-color: var(--card-bg); border: 1px solid var(--card-border);">
        <div class="px-6 py-4 flex justify-between items-center" style="border-bottom: 1px solid var(--card-border);">
            <h3 class="font-semibold text-lg" style="color: var(--text-primary);">Recent Agent Activity</h3>
            <button class="text-sm transition-colors" style="color: var(--btn-primary-bg);"
                onmouseover="this.style.color='var(--btn-primary-hover)';"
                onmouseout="this.style.color='var(--btn-primary-bg)';">
                View All Logs
            </button>
        </div>
        <div class="overflow-x-auto grow">
            <table class="w-full text-left text-sm" style="color: var(--table-text);">
                <thead class="uppercase text-xs font-semibold"
                    style="background-color: var(--table-header-bg); color: var(--table-header-text);">
                    <tr>
                        <th class="px-6 py-3">Agent ID</th>
                        <th class="px-6 py-3">Event Type</th>
                        <th class="px-6 py-3">Details</th>
                        <th class="px-6 py-3">Time</th>
                    </tr>
                </thead>
                <tbody style="border-top: 1px solid var(--table-border);">
                    @foreach (var activity in RecentActivities)
                    {
                        <tr class="transition-colors" style="border-bottom: 1px solid var(--table-border);"
                            onmouseover="this.style.backgroundColor='var(--table-row-hover)';"
                            onmouseout="this.style.backgroundColor='transparent';">
                            <td class="px-6 py-4 font-medium" style="color: var(--table-text-primary);">@activity.AgentId
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-2 py-1 rounded text-xs"
                                    style="background-color: @activity.BadgeBgColor; color: @activity.BadgeTextColor;">
                                    @activity.EventType
                                </span>
                            </td>
                            <td class="px-6 py-4">@activity.Details</td>
                            <td class="px-6 py-4">@activity.TimeAgo</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @* Cột Phải *@
    <div class="xl:col-span-1 h-full">
        @* Gọi Component ResourceUsageCard ở đây *@
        <ResourceUsageCard />
    </div>
</div>

@code {
    // ============================
    // 1) State cho UI hiện tại
    // ============================

    // Danh sách activity dùng để bind vào bảng Recent Agent Activity
    private List<AgentActivityModel> RecentActivities { get; set; } = new();

    // Lưu lại kết quả command mới nhất (nếu cần hiển thị thêm sau này)
    private CommandResult? _lastCommandResult;

    // ============================
    // 2) SignalR connection
    // ============================

    // Field HubConnection theo checklist
    private HubConnection? _hubConnection;

    // Thuộc tính tiện để biết có đang connect hay không (nếu muốn disable/enable nút UI)
    private bool IsConnected =>
        _hubConnection?.State == HubConnectionState.Connected;

    // ============================
    // 3) Khởi tạo component + tạo SignalR connection
    // ============================

    // Thay vì OnInitialized(), ta dùng OnInitializedAsync()
    // để vừa seed dữ liệu giả, vừa khởi tạo connection SignalR.
    protected override async Task OnInitializedAsync()
    {
        // 3.1 Seed dữ liệu mock như code cũ (cho UI có sẵn vài dòng mẫu)
        SeedMockRecentActivities();

        // 3.2 Tạo HubConnection tới RemoteControlHub
        // Endpoint "/remotehub" phải trùng với MapHub<RemoteControlHub> trong Program.cs
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("/remotehub"))
            .WithAutomaticReconnect()                // cho phép tự reconnect khi mất kết nối
            .Build();

        // 3.3 Đăng ký (subscribe) các event từ server

        // Khi server gửi event AgentConnected -> có agent mới connect
        _hubConnection.On<AgentInfo>(HubEvents.AgentConnected, agent =>
        {
            Console.WriteLine($"[Home] AgentRegistered: {agent.AgentId}");

            // Thêm 1 activity mới lên đầu danh sách để UI cập nhật
            RecentActivities.Insert(0, new AgentActivityModel
            {
                AgentId = agent.AgentId,
                EventType = "Network",                       // tùy ý đặt nhãn
                BadgeTextColor = "#2563eb",
                BadgeBgColor = "rgba(37, 99, 235, 0.1)",
                Details = "Connected to Hub",
                TimeAgo = "Just now"
            });

            // Vì callback SignalR chạy trên background thread,
            // cần InvokeAsync(StateHasChanged) để Blazor re-render UI.
            InvokeAsync(StateHasChanged);
        });

        // Khi server broadcast kết quả command
        _hubConnection.On<CommandResult>(HubEvents.CommandCompleted, result =>
        {
            Console.WriteLine($"[Home] CommandCompleted: {result.CommandId}, Success = {result.Success}");

            _lastCommandResult = result;

            // Thêm activity hiển thị kết quả command
            RecentActivities.Insert(0, new AgentActivityModel
            {
                AgentId = result.AgentId,
                EventType = "Command",
                BadgeTextColor = result.Success ? "#10b981" : "#ef4444",
                BadgeBgColor = result.Success
                    ? "rgba(16, 185, 129, 0.1)"
                    : "rgba(239, 68, 68, 0.1)",
                Details = $"Command {result.CommandId} completed (Success = {result.Success})",
                TimeAgo = "Just now"
            });

            InvokeAsync(StateHasChanged);
        });

        // 3.4 Bắt đầu kết nối tới Hub
        try
        {
            await _hubConnection.StartAsync();
            Console.WriteLine("[Home] Hub connection started");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Home] Cannot start hub connection: {ex.Message}");
        }
    }

    // Hàm private giữ lại logic seed dữ liệu cũ để code gọn gàng hơn
    private void SeedMockRecentActivities()
    {
        RecentActivities = new()
        {
            new AgentActivityModel
            {
                AgentId = "MayTinhCuaQuangUwU",
                EventType = "Process",
                BadgeTextColor = "#eab308",
                BadgeBgColor = "rgba(234, 179, 8, 0.1)",
                Details = "Started 'chrome.exe'",
                TimeAgo = "2 mins ago"
            },
            new AgentActivityModel
            {
                AgentId = "LAPTOP-WRK",
                EventType = "Network",
                BadgeTextColor = "#2563eb",
                BadgeBgColor = "rgba(37, 99, 235, 0.1)",
                Details = "Connected to Hub",
                TimeAgo = "5 mins ago"
            },
            new AgentActivityModel
            {
                AgentId = "SERVER-09",
                EventType = "System",
                BadgeTextColor = "#10b981",
                BadgeBgColor = "rgba(16, 185, 129, 0.1)",
                Details = "Webcam activated",
                TimeAgo = "12 mins ago"
            }
        };
    }

    // ============================
    // 4) Dọn dẹp connection khi rời trang
    // ============================

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection is not null)
        {
            await _hubConnection.DisposeAsync();
        }
    }

    // ============================
    // 5) Model dùng cho bảng activity
    // ============================

    public record AgentActivityModel
    {
        public string AgentId { get; init; } = string.Empty;
        public string EventType { get; init; } = string.Empty;
        public string BadgeTextColor { get; init; } = string.Empty;
        public string BadgeBgColor { get; init; } = string.Empty;
        public string Details { get; init; } = string.Empty;
        public string TimeAgo { get; init; } = string.Empty;
    }
}
