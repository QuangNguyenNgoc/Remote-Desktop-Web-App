@page "/devices/{Id}"
@inject NavigationManager Nav

@code {
    // Fix CS8618: Thêm "= default!" để báo với C# rằng: "Yên tâm, cái này Blazor tự điền, không null đâu"
    [Parameter]
    public string Id { get; set; } = default!;

    protected override void OnInitialized()
    {
        // Logic khởi tạo nếu cần
    }

    // Hàm quay lại danh sách thiết bị
    void GoBack()
    {
        Nav.NavigateTo("/devices");
    }
}

<!-- Info Bar & Actions -->
<DeviceHeader DeviceId="@Id" />

<!-- Tabs & Remote Screen -->
<RemoteScreen />

<!-- Terminal Log -->
<TerminalLog DeviceId="@Id" />