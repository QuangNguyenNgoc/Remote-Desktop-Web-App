            <div class="flex items-center justify-between p-3 rounded-xl transition-colors hover:bg-opacity-50"
                 style="background-color: var(--table-header-bg);">
                <div class="flex items-center gap-3">
                    <svg class="w-4 h-4" style="color: var(--text-tertiary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    <span class="text-sm" style="color: var(--text-secondary);">@Lang.T("settings_auto_reconnect")</span>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" @bind="_autoReconnect" @bind:after="SaveSettings" class="sr-only peer">
                    <div class="w-11 h-6 rounded-full peer transition-colors duration-200
                                peer-checked:after:translate-x-full peer-checked:after:border-white 
                                after:content-[''] after:absolute after:top-[2px] after:left-[2px] 
                                after:bg-white after:border after:rounded-full after:h-5 after:w-5 
                                after:transition-all after:shadow-md"
                         style="background-color: @(_autoReconnect ? "var(--btn-primary-bg)" : "var(--input-border)");"></div>
                </label>
