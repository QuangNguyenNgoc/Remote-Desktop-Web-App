                <div class="flex items-center gap-3">
                    <svg class="w-4 h-4" style="color: var(--text-tertiary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                    </svg>
                    <span class="text-sm" style="color: var(--text-secondary);">@Lang.T("settings_push_notifications")</span>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" @bind="_pushNotifications" @bind:after="SaveSettings" class="sr-only peer">
                    <div class="w-11 h-6 rounded-full peer transition-colors duration-200
                                peer-checked:after:translate-x-full peer-checked:after:border-white 
                                after:content-[''] after:absolute after:top-[2px] after:left-[2px] 
                                after:bg-white after:border after:rounded-full after:h-5 after:w-5 
                                after:transition-all after:shadow-md"
                         style="background-color: @(_pushNotifications ? "var(--btn-primary-bg)" : "var(--input-border)");"></div>
                </label>
            </div>

            @* Sound Alerts *@
            <div class="flex items-center justify-between p-3 rounded-xl transition-colors hover:bg-opacity-50"
                 style="background-color: var(--table-header-bg);">
                <div class="flex items-center gap-3">
                    <svg class="w-4 h-4" style="color: var(--text-tertiary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path>
                    </svg>
                    <span class="text-sm" style="color: var(--text-secondary);">@Lang.T("settings_sound_alerts")</span>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" @bind="_soundAlerts" @bind:after="SaveSettings" class="sr-only peer">
                    <div class="w-11 h-6 rounded-full peer transition-colors duration-200
                                peer-checked:after:translate-x-full peer-checked:after:border-white 
                                after:content-[''] after:absolute after:top-[2px] after:left-[2px] 
                                after:bg-white after:border after:rounded-full after:h-5 after:w-5 
                                after:transition-all after:shadow-md"
                         style="background-color: @(_soundAlerts ? "var(--btn-primary-bg)" : "var(--input-border)");"></div>
