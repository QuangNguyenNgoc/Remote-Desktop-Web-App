                <span style="color: var(--text-primary);">1.0.0</span>
            </div>
            <div class="flex justify-between">
                <span>@Lang.T("settings_app_name")</span>
                <span style="color: var(--text-primary);">NETSPY Remote Control</span>
            </div>
            <div class="flex justify-between">
                <span>@Lang.T("settings_framework")</span>
                <span style="color: var(--text-primary);">Blazor + SignalR</span>
            </div>
        </div>
    </div>
</div>

@code {
    // ============================
    // Settings State
    // ============================
    
    private string _selectedLanguage = "EN";
    private bool _isDarkMode = false;
    private string _selectedWallpaper = "default";
    private bool _pushNotifications = true;
    private bool _soundAlerts = true;
    private bool _autoReconnect = true;
    private bool _lowBandwidth = false;
    private int _refreshInterval = 30;

    // Wallpaper options
    private readonly List<WallpaperOption> _wallpapers = new()
    {
        new("default", "Default", "linear-gradient(135deg, rgba(249,115,22,0.1), transparent, rgba(236,72,153,0.1))"),
        new("sunset", "Sunset", "linear-gradient(135deg, rgba(249,115,22,0.2), rgba(236,72,153,0.1), rgba(168,85,247,0.2))"),
        new("ocean", "Ocean", "linear-gradient(135deg, rgba(6,182,212,0.2), rgba(59,130,246,0.1), rgba(99,102,241,0.2))"),
        new("forest", "Forest", "linear-gradient(135deg, rgba(16,185,129,0.2), rgba(34,197,94,0.1), rgba(20,184,166,0.2))"),
        new("aurora", "Aurora", "linear-gradient(135deg, rgba(139,92,246,0.2), rgba(168,85,247,0.1), rgba(217,70,239,0.2))"),
        new("midnight", "Midnight", "linear-gradient(135deg, rgba(15,23,42,0.5), rgba(31,41,55,0.3), rgba(39,39,42,0.5))")
    };

    protected override async Task OnInitializedAsync()
    {
        Lang.OnLanguageChanged += HandleLanguageChanged;
        await LoadSettings();
        Lang.SetLanguage(_selectedLanguage);
        MainLayout.PageTitle = Lang.T("settings_title");
    }

    private async Task LoadSettings()
    {
        try
        {
            _selectedLanguage = await JS.InvokeAsync<string?>("localStorage.getItem", "settings_language") ?? "EN";
            _isDarkMode = await JS.InvokeAsync<string?>("localStorage.getItem", "settings_darkMode") == "true";
            _selectedWallpaper = await JS.InvokeAsync<string?>("localStorage.getItem", "settings_wallpaper") ?? "default";
            _pushNotifications = await JS.InvokeAsync<string?>("localStorage.getItem", "settings_pushNotifications") != "false";
            _soundAlerts = await JS.InvokeAsync<string?>("localStorage.getItem", "settings_soundAlerts") != "false";
            _autoReconnect = await JS.InvokeAsync<string?>("localStorage.getItem", "settings_autoReconnect") != "false";
            _lowBandwidth = await JS.InvokeAsync<string?>("localStorage.getItem", "settings_lowBandwidth") == "true";
            
            var refreshStr = await JS.InvokeAsync<string?>("localStorage.getItem", "settings_refreshInterval");
            if (int.TryParse(refreshStr, out var refresh) && refresh >= 5 && refresh <= 120)
            {
                _refreshInterval = refresh;
            }
        }
        catch
        {
            // Use defaults if localStorage fails
        }
    }

    private async Task SaveSettings()
    {
        try
        {
            await JS.InvokeVoidAsync("localStorage.setItem", "settings_language", _selectedLanguage);
            await JS.InvokeVoidAsync("localStorage.setItem", "settings_darkMode", _isDarkMode.ToString().ToLower());
            await JS.InvokeVoidAsync("localStorage.setItem", "settings_wallpaper", _selectedWallpaper);
            await JS.InvokeVoidAsync("localStorage.setItem", "settings_pushNotifications", _pushNotifications.ToString().ToLower());
            await JS.InvokeVoidAsync("localStorage.setItem", "settings_soundAlerts", _soundAlerts.ToString().ToLower());
            await JS.InvokeVoidAsync("localStorage.setItem", "settings_autoReconnect", _autoReconnect.ToString().ToLower());
            await JS.InvokeVoidAsync("localStorage.setItem", "settings_lowBandwidth", _lowBandwidth.ToString().ToLower());
            await JS.InvokeVoidAsync("localStorage.setItem", "settings_refreshInterval", _refreshInterval.ToString());
        }
        catch
        {
            // Handle localStorage errors silently
        }
    }

    private async Task ToggleTheme()
    {
        _isDarkMode = !_isDarkMode;
        await SaveSettings();
        await ApplyTheme();
    }

    private async Task ApplyTheme()
    {
        if (_isDarkMode)
        {
            await JS.InvokeVoidAsync("eval", "document.documentElement.classList.add('dark'); document.documentElement.classList.remove('light');");
        }
        else
        {
            await JS.InvokeVoidAsync("eval", "document.documentElement.classList.remove('dark'); document.documentElement.classList.add('light');");
        }
    }

    private async Task SelectWallpaper(string id)
    {
        _selectedWallpaper = id;
        await SaveSettings();
        // Reload to apply wallpaper change
        await JS.InvokeVoidAsync("eval", "location.reload();");
    }

    private async Task OnLanguageChanged()
    {
        Lang.SetLanguage(_selectedLanguage);
        await SaveSettings();
        StateHasChanged();
    }

    private void HandleLanguageChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        Lang.OnLanguageChanged -= HandleLanguageChanged;
    }

    private record WallpaperOption(string Id, string Name, string Gradient);
