@* 
    RegistryToolbar.razor - Registry Browser Toolbar Component
    Contains path input, navigation, search, and CRUD action buttons
*@

<div class="registry-toolbar">
    @* Path input *@
    <div class="path-group">
        <span class="path-label">Path:</span>
        <input type="text" 
               class="registry-path-input" 
               placeholder="HKEY_CURRENT_USER\Software" 
               value="@CurrentPath"
               @onchange="OnPathChange"
               @onkeypress="HandlePathKeyPress" />
    </div>
    
    @* Navigation buttons *@
    <button class="btn btn-navigate" @onclick="() => OnNavigate.InvokeAsync()" title="Navigate to path">
        Go
    </button>
    <button class="btn btn-refresh" @onclick="() => OnRefresh.InvokeAsync()" title="Refresh current key">
        Refresh
    </button>
    <button class="btn btn-back" @onclick="() => OnGoBack.InvokeAsync()" disabled="@(!CanGoBack)" title="Go back">
        ← Back
    </button>

    <div class="toolbar-separator"></div>

    @* Search input *@
    <div class="search-group">
        <input type="text" 
               class="registry-search-input" 
               placeholder="Search keys/values..." 
               value="@SearchQuery"
               @oninput="HandleSearchInput"
               @onkeypress="HandleSearchKeyPress" />
        @if (!string.IsNullOrEmpty(SearchQuery))
        {
            <button class="btn-clear-search" @onclick="ClearSearch" title="Clear search">×</button>
        }
    </div>

    <div class="toolbar-separator"></div>

    @* CRUD buttons *@
    <button class="btn btn-create-key" @onclick="() => OnCreateKey.InvokeAsync()" title="Create new subkey">
        + Key
    </button>
    <button class="btn btn-create-value" @onclick="() => OnCreateValue.InvokeAsync()" title="Create new value">
        + Value
    </button>
    <button class="btn btn-delete" @onclick="() => OnDelete.InvokeAsync()" title="Delete selected">
        Delete
    </button>
</div>

@code {
    [Parameter] public string CurrentPath { get; set; } = "";
    [Parameter] public string SearchQuery { get; set; } = "";
    [Parameter] public bool CanGoBack { get; set; }
    
    [Parameter] public EventCallback<string> CurrentPathChanged { get; set; }
    [Parameter] public EventCallback<string> SearchQueryChanged { get; set; }
    [Parameter] public EventCallback OnNavigate { get; set; }
    [Parameter] public EventCallback OnRefresh { get; set; }
    [Parameter] public EventCallback OnGoBack { get; set; }
    [Parameter] public EventCallback OnCreateKey { get; set; }
    [Parameter] public EventCallback OnCreateValue { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }

    private async Task OnPathChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString() ?? "";
        await CurrentPathChanged.InvokeAsync(value);
    }

    private async Task HandleSearchInput(ChangeEventArgs e)
    {
        var value = e.Value?.ToString() ?? "";
        await SearchQueryChanged.InvokeAsync(value);
    }

    private async Task HandlePathKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await OnNavigate.InvokeAsync();
        }
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Escape")
        {
            await ClearSearch();
        }
    }

    private async Task ClearSearch()
    {
        await SearchQueryChanged.InvokeAsync("");
    }
}

<style>
