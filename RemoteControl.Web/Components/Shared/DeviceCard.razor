<div class="device-card rounded-xl p-6 transition-colors shadow-sm" 
     style="background-color: var(--card-bg); border: 1px solid var(--card-border);"
     role="article"
     aria-label="Device: @Name">
    <div class="flex justify-between items-start mb-4">
        <div class="flex items-center space-x-3">
            <div class="p-2 rounded-lg" style="background-color: var(--icon-bg); color: var(--icon-text);">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                    </path>
                </svg>
            </div>
            <div>
                <h4 class="font-bold" style="color: var(--text-primary);">@Name</h4>
                <p class="text-xs" style="color: var(--text-quaternary);">@Ip</p>
            </div>
        </div>
        @if (IsOnline)
        {
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium" 
                  style="background-color: var(--status-badge-online-bg); color: var(--status-badge-online-text);"
                  role="status">
                ● Online
            </span>
        }
        else
        {
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium" 
                  style="background-color: var(--status-badge-offline-bg); color: var(--status-badge-offline-text);"
                  role="status">
                ● Offline
            </span>
        }
    </div>

    <div class="space-y-2 mb-6">
        <div class="flex justify-between text-sm">
            <span style="color: var(--text-quaternary);">OS Version</span>
            <span style="color: var(--text-secondary);">@OS</span>
        </div>
        <div class="flex justify-between text-sm">
            <span style="color: var(--text-quaternary);">Last Seen</span>
            <span style="color: var(--text-secondary);">@LastSeen</span>
        </div>
    </div>

    <div class="flex space-x-2">
        @if (IsOnline)
        {
            <button @onclick="OnConnect"
                    class="flex-1 py-2 px-4 rounded-lg text-sm font-medium transition-colors flex justify-center items-center gap-2 btn-primary focus-ring"
                    aria-label="Connect to @Name"
                    tabindex="0">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                Connect
            </button>
            <button class="p-2 rounded-lg transition-colors btn-secondary focus-ring"
                    aria-label="Settings for @Name"
                    tabindex="0">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
            </button>
        }
        else
        {
            <button disabled
                    class="flex-1 py-2 px-4 rounded-lg text-sm font-medium cursor-not-allowed" 
                    style="background-color: var(--btn-disabled-bg); color: var(--btn-disabled-text);"
                    aria-disabled="true">
                Unreachable
            </button>
            <button disabled
                    class="p-2 rounded-lg cursor-not-allowed" 
                    style="background-color: var(--btn-disabled-bg); color: var(--btn-disabled-text);"
                    aria-label="Settings unavailable"
                    aria-disabled="true">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
            </button>
        }
    </div>
</div>

<style>
    .device-card:hover {
        border-color: var(--card-hover-border) !important;
    }
    
    .focus-ring:focus-visible {
        outline: 2px solid #3b82f6;
        outline-offset: 2px;
    }
</style>

@code {
    [Parameter] public string Name { get; set; } = "";
    [Parameter] public string Ip { get; set; } = "";
    [Parameter] public string OS { get; set; } = "";
    [Parameter] public bool IsOnline { get; set; }
    [Parameter] public string LastSeen { get; set; } = "";
    [Parameter] public EventCallback OnConnect { get; set; }
}
