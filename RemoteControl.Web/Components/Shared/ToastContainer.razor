@using RemoteControl.Web.Services
@inject ToastService ToastService
@implements IDisposable

@* Toast notification container - fixed position at top-right *@
<div class="fixed top-4 right-4 z-[9999] flex flex-col gap-2 pointer-events-none" style="max-width: 380px;">
    @foreach (var toast in _toasts)
    {
        <div class="pointer-events-auto animate-slide-in rounded-lg shadow-lg p-4 flex items-start gap-3 transition-all"
             style="@GetToastStyle(toast.Type)"
             role="alert"
             aria-live="polite">
            
            @* Icon *@
            <div class="flex-shrink-0 mt-0.5">
                @if (toast.Type == ToastType.Success)
                {
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                }
                else if (toast.Type == ToastType.Error)
                {
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                }
                else if (toast.Type == ToastType.Warning)
                {
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                }
                else
                {
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                }
            </div>
            
            @* Content *@
            <div class="flex-1 min-w-0">
                <p class="text-sm font-semibold">@toast.Title</p>
                <p class="text-sm opacity-90 mt-0.5">@toast.Message</p>
            </div>
            
            @* Close button *@
            <button class="flex-shrink-0 opacity-70 hover:opacity-100 transition-opacity"
                    @onclick="() => ToastService.Remove(toast.Id)"
                    aria-label="Close notification">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
            </button>
        </div>
    }
</div>

<style>
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(100%);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    
    .animate-slide-in {
        animation: slideIn 0.3s ease-out;
    }
</style>

@code {
    private List<ToastMessage> _toasts = new();
    
    protected override void OnInitialized()
    {
        ToastService.OnChange += HandleToastChange;
        _toasts = ToastService.Toasts.ToList();
    }
    
    private void HandleToastChange()
    {
        _toasts = ToastService.Toasts.ToList();
        InvokeAsync(StateHasChanged);
    }
    
    private string GetToastStyle(ToastType type) => type switch
    {
        ToastType.Success => "background: linear-gradient(135deg, #059669, #10b981); color: white;",
        ToastType.Error => "background: linear-gradient(135deg, #dc2626, #ef4444); color: white;",
        ToastType.Warning => "background: linear-gradient(135deg, #d97706, #f59e0b); color: white;",
        ToastType.Info => "background: linear-gradient(135deg, #2563eb, #3b82f6); color: white;",
        _ => "background: var(--card-bg); color: var(--text-primary); border: 1px solid var(--card-border);"
    };
    
    public void Dispose()
    {
        ToastService.OnChange -= HandleToastChange;
    }
}
