@using Microsoft.AspNetCore.SignalR.Client
@using RemoteControl.Shared.Models
@implements IAsyncDisposable

<div class="rounded-xl p-4 mb-6 flex flex-col md:flex-row justify-between items-center gap-4"
    style="background-color: var(--card-bg); border: 1px solid var(--card-border);">
    <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg flex items-center justify-center"
            style="background-color: var(--icon-bg); color: var(--icon-text);">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                </path>
            </svg>
        </div>
        <div>
            <h2 class="text-xl font-bold" style="color: var(--text-primary);">@DeviceId</h2>
            <div class="flex items-center gap-2 text-sm">
                <span class="w-2 h-2 rounded-full" style="background-color: var(--status-online);"></span>
                <span style="color: var(--status-badge-online-text);">Online</span>
                <span style="color: var(--text-quaternary);">â€¢</span>
                <span style="color: var(--text-tertiary);">@IpAddress</span>
            </div>
        </div>
    </div>

    <div class="flex items-center gap-3">
        <div class="h-8 w-px mx-1" style="background-color: var(--divider);"></div>
        <button @onclick="GoBack" class="p-2 rounded-lg transition-colors hover-theme"
            style="color: var(--text-quaternary);" title="Back to Device List">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>
</div>

@code {
    [Parameter] public string DeviceId { get; set; } = "Unknown";
    [Inject] NavigationManager Nav { get; set; } = default!;

    private HubConnection? _hubConnection;
    private string IpAddress { get; set; } = "Loading...";

    protected override async Task OnInitializedAsync()
    {
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(Nav.ToAbsoluteUri("/remotehub"))
            .Build();

        try
        {
            await _hubConnection.StartAsync();
            
            // Get all connected agents and find matching one
            var agents = await _hubConnection.InvokeAsync<List<AgentInfo>>("GetAllAgents");
            var agent = agents?.FirstOrDefault(a => a.AgentId == DeviceId);
            
            if (agent != null && !string.IsNullOrEmpty(agent.IpAddress))
            {
                IpAddress = agent.IpAddress;
            }
            else
            {
                IpAddress = "Unknown";
            }
        }
        catch
        {
            IpAddress = "Error";
        }
    }

    void GoBack()
    {
        Nav.NavigateTo("/devices");
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection != null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
}
