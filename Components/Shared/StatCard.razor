<div class="rounded-xl p-6 shadow-sm" style="background-color: var(--card-bg); border: 1px solid var(--card-border);">
    <div class="flex justify-between items-start">
        <div>
            <p class="text-sm font-medium" style="color: var(--text-tertiary);">@Title</p>
            <h3 class="text-3xl font-bold mt-2" style="color: var(--text-primary);">@Value</h3>
            @if (!string.IsNullOrEmpty(SubText))
            {
                <p class="text-xs mt-2" style="color: var(--text-quaternary);">@SubText</p>
            }
            @if (SubContent != null)
            {
                @SubContent
            }
        </div>
        <div class="p-3 rounded-lg @ColorClass">
            @Icon
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public string Value { get; set; } = "";

    [Parameter]
    public string SubText { get; set; } = "";

    [Parameter]
    public RenderFragment? SubContent { get; set; }

    [Parameter]
    public RenderFragment? Icon { get; set; }

    [Parameter]
    public string ColorClass { get; set; } = "bg-blue-500/10 text-blue-500";
}
