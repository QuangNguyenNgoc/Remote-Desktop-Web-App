<div class="rounded-xl overflow-hidden" style="background-color: var(--card-bg); border: 1px solid var(--card-border);">
    <div class="px-6 py-4 flex justify-between items-center" style="border-bottom: 1px solid var(--card-border);">
        <h3 class="font-semibold text-lg" style="color: var(--text-primary);">Recent Agent Activity</h3>
        <button class="text-sm transition-colors" style="color: var(--btn-primary-bg);" onmouseover="this.style.color='var(--btn-primary-hover)';" onmouseout="this.style.color='var(--btn-primary-bg)';">
            View All Logs
        </button>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full text-left text-sm" style="color: var(--table-text);">
            <thead class="uppercase text-xs font-semibold" style="background-color: var(--table-header-bg); color: var(--table-header-text);">
                <tr>
                    <th class="px-6 py-3">Agent ID</th>
                    <th class="px-6 py-3">Event Type</th>
                    <th class="px-6 py-3">Details</th>
                    <th class="px-6 py-3">Time</th>
                </tr>
            </thead>
            <tbody style="border-top: 1px solid var(--table-border);">
                <tr class="transition-colors" style="border-bottom: 1px solid var(--table-border);" onmouseover="this.style.backgroundColor='var(--table-row-hover)';" onmouseout="this.style.backgroundColor='transparent';">
                    <td class="px-6 py-4 font-medium" style="color: var(--table-text-primary);">DESKTOP-A41</td>
                    <td class="px-6 py-4"><span
                            class="px-2 py-1 rounded text-xs" style="background-color: rgba(234, 179, 8, 0.1); color: #eab308;">Process</span></td>
