@page "/devices/{Id}"
@inject NavigationManager Nav

@code {
    // Fix CS8618: Thêm "= default!" để báo với C# rằng: "Yên tâm, cái này Blazor tự điền, không null đâu"
    [Parameter]
    public string Id { get; set; } = default!;

    protected override void OnInitialized()
    {
        // Logic khởi tạo nếu cần
    }

    // Hàm quay lại danh sách thiết bị
    void GoBack()
    {
        Nav.NavigateTo("/devices");
    }
}

<!-- Info Bar & Actions -->
<div
    class="bg-gray-800 border border-gray-700 rounded-xl p-4 mb-6 flex flex-col md:flex-row justify-between items-center gap-4">
    <div class="flex items-center gap-4">
        <div class="w-12 h-12 bg-gray-700 rounded-lg flex items-center justify-center text-gray-300">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                </path>
            </svg>
        </div>
        <div>
            <!-- Hiển thị ID lấy từ URL -->
            <h2 class="text-xl font-bold text-white">@Id</h2>
            <div class="flex items-center gap-2 text-sm">
                <span class="w-2 h-2 rounded-full bg-green-500"></span>
                <span class="text-green-400">Online</span>
                <span class="text-gray-500">•</span>
                <span class="text-gray-400">192.168.1.104</span>
            </div>
        </div>
    </div>

    <div class="flex items-center gap-3">
        <button
            class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-gray-200 rounded-lg text-sm font-medium flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z">
                </path>
            </svg>
            Webcam
        </button>
        <button
            class="px-4 py-2 bg-orange-500/10 hover:bg-orange-500/20 text-orange-500 rounded-lg text-sm font-medium flex items-center gap-2 border border-orange-500/20">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                </path>
            </svg>
            Restart
        </button>
        <button
            class="px-4 py-2 bg-red-500/10 hover:bg-red-500/20 text-red-500 rounded-lg text-sm font-medium flex items-center gap-2 border border-red-500/20">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Shutdown
        </button>

        <!-- Nút Close (X) MỚI -->
        <div class="h-8 w-px bg-gray-700 mx-1"></div> <!-- Đường kẻ dọc ngăn cách -->
        <button @onclick="GoBack"
            class="p-2 text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg transition-colors"
            title="Back to Device List">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>
</div>

<!-- Tabs & Remote Screen -->
<div class="bg-gray-800 border border-gray-700 rounded-xl overflow-hidden">
    <div class="flex border-b border-gray-700">
        <button
            class="px-6 py-4 text-blue-500 border-b-2 border-blue-500 font-medium text-sm flex items-center gap-2 bg-gray-700/30">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                </path>
            </svg>
            Remote Screen
        </button>
        <button class="px-6 py-4 text-gray-400 hover:text-gray-200 font-medium text-sm flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 002 2h2a2 2 0 002-2z">
                </path>
            </svg>
            Task Manager
        </button>
        <button class="px-6 py-4 text-gray-400 hover:text-gray-200 font-medium text-sm flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                </path>
            </svg>
            Keylogger
        </button>
    </div>

    <div class="relative bg-black w-full aspect-video flex items-center justify-center group">
        <div class="text-center">
            <div class="text-gray-500 mb-2">Live Stream Active</div>
            <!-- Ảnh Demo: bạn có thể thay bằng ảnh thật hoặc Canvas sau này -->
            <img src="https://picsum.photos/1200/675" alt="Remote Screen"
                class="opacity-50 max-w-full max-h-full rounded" />
        </div>

        <div class="absolute top-4 left-4 flex items-center gap-2 bg-black/60 px-3 py-1 rounded-full backdrop-blur-sm">
            <span class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></span>
            <span class="text-xs font-bold text-white tracking-wider">LIVE STREAM</span>
        </div>
    </div>
</div>

<!-- Terminal Log -->
<div class="mt-6 bg-black rounded-xl border border-gray-800 p-4 font-mono text-sm h-48 overflow-y-auto">
    <div class="text-gray-500 mb-2 border-b border-gray-800 pb-2 flex justify-between">
        <span>>_ SYSTEM CONSOLE</span>
        <span class="text-xs">Port 5000 Connected</span>
    </div>
    <div class="space-y-1">
        <p class="text-blue-400">[15:30:01] System initialized. SignalR hub connection established.</p>
        <p class="text-green-400">[15:30:02] Service: AgentManagerService started successfully.</p>
        <p class="text-yellow-500">[15:30:05] Warning: Device ID 'DESKTOP-OLD' connection timeout.</p>
        <p class="text-gray-300">[15:46:50] Session started: @Id (SignalR ID: kg282x2qm)</p>
        <p class="text-gray-300 typing-effect">_</p>
    </div>
</div>