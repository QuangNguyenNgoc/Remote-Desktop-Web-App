@* Passkey Login Component *@

<div class="passkey-login-container">
    <div class="passkey-login-box">
        @* Centered header with bold title and lock icon *@
        <div class="passkey-header">
            <svg class="header-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect width="18" height="11" x="3" y="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
            <h1>Passkey Login</h1>
        </div>

        <div class="passkey-form">
            @* Updated label styling with medium font weight *@
            <div class="form-group">
                <label for="passkey-input">Enter passkey</label>
                <div class="input-wrapper">
                    <input 
                        id="passkey-input" 
                        type="@(ShowPassword ? "text" : "password")" 
                        @bind="PasskeyValue" 
                        @onkeypress="HandleKeyPress"
                        placeholder="enter here"
                        class="passkey-input" />
                    @* Added toggle password visibility button *@
                    <button type="button" class="toggle-password" @onclick="TogglePasswordVisibility">
                        @if (ShowPassword)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M9.88 9.88a3 3 0 1 0 4.24 4.24"/>
                                <path d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 10 7 10 7a13.16 13.16 0 0 1-1.67 2.68"/>
                                <path d="M6.61 6.61A13.526 13.526 0 0 0 2 12s3 7 10 7a9.74 9.74 0 0 0 5.39-1.61"/>
                                <line x1="2" x2="22" y1="2" y2="22"/>
                            </svg>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                                <circle cx="12" cy="12" r="3"/>
                            </svg>
                        }
                    </button>
                </div>
            </div>

            @* Added Remember me checkbox *@
            <div class="remember-me">
                <input 
                    type="checkbox" 
                    id="remember" 
                    @bind="RememberMe"
                    class="remember-checkbox" />
                <label for="remember">
                    Remember me <span class="days-text">(7 days)</span>
                </label>
            </div>

            @* Updated button styling with semibold font *@
            <button 
                class="login-button" 
                @onclick="HandleLogin" 
                disabled="@IsLoading">
                @if (IsLoading)
                {
                    <span class="loading-spinner"></span>
                    <span>Logging in...</span>
                }
                else
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect width="18" height="11" x="3" y="11" rx="2" ry="2"/>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                    </svg>
                    <span>Login</span>
                }
            </button>

            @* Updated footer text styling *@
            <div class="passkey-footer">
                <p>Secure authentication required</p>
            </div>
        </div>
    </div>
</div>

@code {
    private string PasskeyValue { get; set; } = string.Empty;
    private bool IsLoading { get; set; } = false;
    private bool ShowPassword { get; set; } = false;
    private bool RememberMe { get; set; } = false;

    private async Task HandleLogin()
    {
        if (string.IsNullOrWhiteSpace(PasskeyValue))
            return;

        IsLoading = true;
        StateHasChanged();

        // Simulate API call
        await Task.Delay(1000);

        // TODO: Implement actual authentication logic here
        Console.WriteLine($"Login attempted with passkey: {PasskeyValue}");
        Console.WriteLine($"Remember me: {RememberMe}");

        IsLoading = false;
        StateHasChanged();
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            _ = HandleLogin();
        }
    }

    private void TogglePasswordVisibility()
    {
        ShowPassword = !ShowPassword;
    }
}

